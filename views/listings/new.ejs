<% layout("/layouts/boilerplate") %>

<br><br>
    <div class="row">
        <div class="col-8 offset-2">
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

        <h3><span style="color: #fe424d; ">Create</span> A New Listing</h3>
                        <br>

        <div class="md-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please provide a title</div>
        </div>
        <br>

        <div class="md-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"
            class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter a valid description</div>
        </div>
        <br>

        <div class="md-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]" type="file" class="form-control" required>
        </div>
        <br>

        <div class="row">
            <div class="md-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="1200" class="form-control" required />
                <div class="invalid-feedback">Price should be valid</div>
            </div>
            <br>
            
            <div class="md-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="India" type="text" class="form-control" required />
                <div class="invalid-feedback">Country name should be valid</div>
            </div>

        </div>
        <br>


        <div class="md-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter a location" type="text" class="form-control" required />
            <div class="invalid-feedback">Location should be valid and non-empty</div>
        </div>
        <br>

        <button class="btn btn-dark edit-btn">ADD</button>
                        <br><br>
    </form>
</div>
</div>